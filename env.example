# Clear Trans 环境变量配置
# 复制此文件为 .env.local 使用

# 应用端口
PORT=8888

# 应用名称（显示在浏览器标题）
NEXT_PUBLIC_APP_NAME=Clear Trans

# 应用访问地址（用于生成链接）
NEXT_PUBLIC_APP_URL=http://localhost:8888

# OpenAI API 密钥（用于翻译和语音合成）
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI API 地址（默认官方地址，可改为代理地址）
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI 默认模型
OPENAI_MODEL=gpt-4o-mini

# OpenAI 最大Token数（控制单次翻译长度）
OPENAI_MAX_TOKENS=4096

# OpenAI 温度值（控制翻译创造性，0-2之间）
OPENAI_TEMPERATURE=0.3

# Gemini API 密钥（用于翻译和语音合成）
GEMINI_API_KEY=AIzaSy-your-gemini-api-key-here

# Gemini API 地址（默认官方地址）
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Gemini 默认模型
GEMINI_MODEL=gemini-2.0-flash

# Google Analytics ID（可选，用于网站统计）
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# 开发环境标识
NODE_ENV=development 